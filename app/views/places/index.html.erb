  <!DOCTYPE html>
  <html>
  <head>
  
<h1>All the Places</h1>
</head>
<body>
<% if !@place.present?  %>
<strong> Sorry no places have been created yet!</strong>
   <%else%>
<% @place.each do |r| %>
  <h2>Your reviewed places name:<%= link_to r.name, place_path(r.id)%> - Category: <%= r.category.name %> - Description: <%= r.description %> - Rating: <%= r.overall_rating %> </h2>
  <%= link_to "Write a review", new_place_review_path(r.id) %> 
 
  <% end %>
  <% end %>
  <style>
  </style>
<%= yield %>
</body>
</html>




  